<head>
    <title>Log in</title>
    <style>
        .login
        {
            padding: 50px;
            display: grid;
            justify-content: center;
        }
        .form
        {
            width: 400px;
            background-color: #8080803d;
            padding: 50px;
            text-align: center;
            border-radius: 5px;
        }
        .input
        {
            margin-top: 10px;
            width: 100%;
            padding: 5px;
            border-radius: 5px;
            border-style: none;
        }
        .input:focus
        {
            outline: none;
        }
        .btn
        {
            background-color: #38387391;
            border-style: none;
            outline: none;
            
        }
        .btn:active .btn:focus 
        {
            outline: none;
            border: none;
        }
        .wrong
        {
            text-align: center;
            color: red;
        }
        
    </style>
</head>

<%- include('header'); %> 


    <div class="login">
      <div class="form">
          <form action="/login" method="POST">
            <h5 class="wrong"><%= wrong %> </h5>
            

           <input type="text" placeholder="user id" class="input" name="id">
           <br>
           <input type="password" placeholder="password" class="input" name="pass">
           <br>
            <input type="submit" value="Log In" class="input btn">
          </form>

      </div>
    </div>
    
    




<%- include('footer'); %> 